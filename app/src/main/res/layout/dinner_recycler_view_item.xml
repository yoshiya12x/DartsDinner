<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="dinnerRecyclerViewItemViewModel"
                type="e.yoppie.dartsdinner.viewmodel.DinnerRecyclerViewItemViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_margin="6dp"
                android:textSize="16sp"
                android:text='@{dinnerRecyclerViewItemViewModel.id + " : " + dinnerRecyclerViewItemViewModel.name}'
                android:id="@+id/dinnerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>